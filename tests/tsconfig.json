{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@server/*": ["../server/*"],
			"@client/*": ["../client/src/*"],
			"@app/*": ["../app/src/*"]
		}
	},
	"include": ["**/*.ts"]
}