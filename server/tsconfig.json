{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": false,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}