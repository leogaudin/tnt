{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": false,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": ".",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}