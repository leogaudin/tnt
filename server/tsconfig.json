{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"strict": false,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": ".",
		"allowJs": true,
		"resolveJsonModule": true,
		"declaration": false,
		"noEmit": true
	},
	"include": ["./**/*.ts", "./**/*.js"],
	"exclude": ["node_modules", "dist"]
}